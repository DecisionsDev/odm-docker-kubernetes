<server>
<!-- Do not forget to rename this file webSecurity.xml or to use webSecurity.xml key when creating the secret -->
<!-- kubectl create secret generic mywebsecuritysecret --from-file=webSecurity.xml=./sample-webSecurity-OIDC.xml -->  

<!-- Give all roles to an LDAP group -->
<variable name="odm.rtsAdministrators.group1" value="group:o=defaultWIMFileBasedRealm/cn=oidcRtsAdministrator,ou=memberlist,ou=ibmgroups,o=ibm.com"/>
<variable name="odm.rtsInstallers.group1" value="group:o=defaultWIMFileBasedRealm/cn=oidcRtsConfigManager,ou=memberlist,ou=ibmgroups,o=ibm.com"/>
<variable name="odm.rtsConfigmanagers.group1" value="group:o=defaultWIMFileBasedRealm/cn=oidcRtsConfigManager,ou=memberlist,ou=ibmgroups,o=ibm.com"/>
<variable name="odm.resAdministrators.group1" value="group:o=defaultWIMFileBasedRealm/cn=oidcResAdministrator,ou=memberlist,ou=ibmgroups,o=ibm.com"/>
<variable name="odm.resDeployers.group1" value="group:o=defaultWIMFileBasedRealm/cn=oidcResDeployer,ou=memberlist,ou=ibmgroups,o=ibm.com"/>
<variable name="odm.resMonitors.group1" value="group:o=defaultWIMFileBasedRealm/cn=oidcResMonitor,ou=memberlist,ou=ibmgroups,o=ibm.com"/>
<variable name="odm.resExecutors.group1" value="group:o=defaultWIMFileBasedRealm/cn=oidcResExecutor,ou=memberlist,ou=ibmgroups,o=ibm.com"/>

<!-- Give all roles to an LDAP user -->
<variable name="odm.rtsAdministrators.user1" value="user:o=defaultWIMFileBasedRealm/uid=generalAdmin,c=fr,ou=bluepages,o=ibm.com"/>
<variable name="odm.rtsInstallers.user1" value="user:o=defaultWIMFileBasedRealm/uid=generalAdmin,c=fr,ou=bluepages,o=ibm.com"/>
<variable name="odm.rtsConfigManagers.user1" value="user:o=defaultWIMFileBasedRealm/uid=generalAdmin,c=fr,ou=bluepages,o=ibm.com"/>
<variable name="odm.resAdministrators.user1" value="user:o=defaultWIMFileBasedRealm/uid=generalAdmin,c=fr,ou=bluepages,o=ibm.com"/>
<variable name="odm.resDeployers.user1" value="user:o=defaultWIMFileBasedRealm/uid=generalAdmin,c=fr,ou=bluepages,o=ibm.com"/>
<variable name="odm.resMonitors.user1" value="user:o=defaultWIMFileBasedRealm/uid=generalAdmin,c=fr,ou=bluepages,o=ibm.com"/>
<variable name="odm.resExecutors.user1" value="user:o=defaultWIMFileBasedRealm/uid=generalAdmin,c=fr,ou=bluepages,o=ibm.com"/>

<!-- Give all roles to the UMS Admin user which is in the UMS basic registry -->
<variable name="odm.rtsAdministrators.user2" value="user:o=defaultWIMFileBasedRealm/umsAdmin"/>
<variable name="odm.rtsInstallers.user2" value="user:o=defaultWIMFileBasedRealm/umsAdmin"/>
<variable name="odm.rtsConfigManagers.user2" value="user:o=defaultWIMFileBasedRealm/umsAdmin"/>
<variable name="odm.resAdministrators.user2" value="user:o=defaultWIMFileBasedRealm/umsAdmin"/>
<variable name="odm.resDeployers.user2" value="user:o=defaultWIMFileBasedRealm/umsAdmin"/>
<variable name="odm.resMonitors.user2" value="user:o=defaultWIMFileBasedRealm/umsAdmin"/>
<variable name="odm.resExecutors.user2" value="user:o=defaultWIMFileBasedRealm/umsAdmin"/>

</server>
